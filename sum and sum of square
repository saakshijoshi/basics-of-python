        "#sumofsquares\n",
        "def squaresum(n) :\n",
        "  sm = 0\n",
        "  for i in range(1, n+1) :\n",
        "    sm = sm + (i * i)\n",
        "  return sm \n",
        "  n = 10\n",
        "print(squaresum(10)) \n",
        "\n",
        "  \n"
